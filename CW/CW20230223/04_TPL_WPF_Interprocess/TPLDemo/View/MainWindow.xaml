<Window x:Class="TPLDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Данные" HorizontalAlignment="Left" Margin="39,47,0,0" VerticalAlignment="Top" MinWidth="65"/>
        <TextBox Name="Tb" HorizontalAlignment="Left" Height="23" Text="{Binding Value}" 
                 Margin="124,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MinWidth="350"/>
        <Button Name="RunButton" Content="Запуск"  IsEnabled="{Binding Isenabled}" Command="{Binding CommandRun}"
                HorizontalAlignment="Left" Margin="39,209,0,0" VerticalAlignment="Top" Width="438" />

    </Grid>
</Window>
